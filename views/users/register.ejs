<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Register - MaMeLi</title>
        <link rel="stylesheet" href="/css/signup.css">
        <link rel="stylesheet" href="/css/productForm.css">
        <link rel="stylesheet" href="/css/shop.css">
        <link rel="stylesheet" href="/css/login.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/css?family=Droid+Sans:400,700" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.css">
        <link rel="stylesheet" href="gallery-grid.css">
        <link rel="stylesheet" href="/css/indexstylesheet.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    
    </head>
    <body>
        
        <div class="fixed-top">
            <header class="newHeader">
              <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                  <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
                  </a>
                  <span>
                      <a href="/"> <img class="logo" src="/imagenes/logo.png" alt="logo"></a> 
                  </span>
                  <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/" class="nav-link px-2 text-white botonHeader">Inicio</a></li>
                    <li><a href="/users/login" class="nav-link px-2 text-white botonHeader">Perfil</a></li>
                    <li><a href="/product" class="nav-link px-2 text-white botonHeader">Productos</a></li>
                    <li><a href="/faqs" class="nav-link px-2 text-white botonHeader">FAQs</a></li>
                    <li><a href="/nosotros" class="nav-link px-2 text-white botonHeader">Nosotros</a></li>
                    <li><a href="/cart" <i class="fas fa-shopping-cart botonHeader"></i></a></li>
                  </ul>
                  <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                    <input type="search" class="form-control form-control-dark" placeholder="Buscar producto.." aria-label="Search">
                  </form>
                  <div class="text-end">
                    <!-- <a href="/users/login" <button type="button" class="btn btn-outline-light me-2" >Ingresá!</button> </a> -->
                    <a href="/users/register" <button type="button" class="btn btn-warning" >Creá tu cuenta</button> </a>
                  </div>
                </div>
              </div>
            </header>
        </div>
      
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>
        
        <% if(locals.mensajeError){%>
            <%for(let i=0; i<mensajeError.length; i++){%>
            <div class="cajaMensajeError">
                <div class="mensajeError"><p>   <%= mensajeError[i].msg %> </p></div>
            </div>
            <%}%> 
        <%}%> 

        <ul class="mensajeError"></ul>
        <main id="main">
            <div id="contenedor-general">
                <div id="div-icono">
                    <i id="icono" class="fas fa-user"></i>
                </div>
                <label id="bienvenida" class="labels-formulario">Registrate</label>
                <form class='loginform ' action="/users/register" method="POST" enctype="multipart/form-data">
                    <div class="div">
                        <label id="contraseña" class="labels-formulario">Nombre</label>
                        <input type="text" name="user" id="input-usuario" class="inputName" value= <%= locals.old ? old.user : null %>  > 
                    </div>
                    <div class="div">
                        <label id="contraseña" class="labels-formulario">Apellido</label>
                        <input type="text" name="lastNameUser" id="input-usuario" class="inputName" value= <%= locals.old ? old.lastNameUser : null %> > 
                    </div>
                    <div class="div">
                        <label id="contraseña" class="labels-formulario">e-mail</label>
                        <input type="text" name="email" id="input-usuario" class="inputMail" value= <%= locals.old ? old.email : null %> > 
                    </div>
                    <div class="div">
                        <label id="contraseña" class="labels-formulario">Contraseña</label>
                        <input type="password" name="password" id="password" class="inputPassword">
                    </div>
                    <div class="div">
                        <label id="contraseña" class="labels-formulario">Confirmar contraseña</label>
                        <input type="password" id="password" class="inputPassword2">
                    </div>
                    <div class="new-product-button-add-image-div-container"> 
                        <label class="new-product-button-add-image-name">Agregar imágenes</label>
                        <input type="file" name="userImage" accept=".jpg" class="new-product-button-add-image-input">
                        
                    </div>
                    <button type="submit" class="btn btn-outline-success" id="ingresar">Registrar</button>
                    
                </form> 
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div> 
            </div>
        </main>
        <%- include('../partials/footer') %>
        <script src="https://kit.fontawesome.com/17464b966e.js" crossorigin="anonymous"></script>
        <script src="/javascript/user.js">
    
        </script>
    </body>
</html>
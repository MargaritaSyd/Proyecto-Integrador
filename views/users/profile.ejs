        <link rel="stylesheet" href="gallery-grid.css">
        <link rel="stylesheet" href="/css/indexstylesheet.css">
    </head> 
  
    <body>
        <div class="fixed-top">
            <header class="newHeader">
              <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                  <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
                  </a>
                  <span>
                      <a href="/"> <img class="logo" src="/imagenes/logo.png" alt="logo"></a> 
                  </span>
                  <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/" class="nav-link px-2 text-white botonHeader">Inicio</a></li>
                    <li><a href="/users/login" class="nav-link px-2 text-white botonHeader">Perfil</a></li>
                    <li><a href="/product" class="nav-link px-2 text-white botonHeader">Productos</a></li>
                    <li><a href="/faqs" class="nav-link px-2 text-white botonHeader">FAQs</a></li>
                    <li><a href="/nosotros" class="nav-link px-2 text-white botonHeader">Nosotros</a></li>
                    <li><a href="/cart" <i class="fas fa-shopping-cart botonHeader"></i></a></li>
                  </ul>
                  <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                    <input type="search" class="form-control form-control-dark" placeholder="Buscar producto.." aria-label="Search">
                  </form>
                  <div class="text-end">
                    <!-- <a href="/users/login" <button type="button" class="btn btn-outline-light me-2" >Ingresá!</button> </a> -->
                    <!-- <a href="/users/register" <button type="button" class="btn btn-warning" >Creá tu cuenta</button> </a> -->
                  </div>
                </div>
              </div>
            </header>
          </div>
          <div class="space"></div>
          <div class="space"></div>
          

        <main id="login-main">

            
        <div class= "container-bannerfaqs">
                <div class="banner-faqs">
                    <img src="/imagenes/tenerte.png" alt="Bienvenido" class="banner-image">
                </div>
        </div>
            
                
                <div id="contenedor-general">
                <div id="infoUser">
                <label id="bienvenida" class=" imgPerfil"> 
                    <%if(user.user_image != ""){%>
                        <img class="profileImg" src="/imagenes/userImages/<%=user.user_image%>"> 
                            <%} else{%>
                        <img class="profileImg" src="/imagenes/logo.JPG">
                    <%}%> 
                </label>
            <div class="div userDatos">
                <h4>Nombre:</h4>
                <label  class=" nombrePro"><%=user.user_name%> <%=user.lastName_user%></label>
                <h4>Email:</h4>
                <label  class=" emailPro"><%= user.email %></label>
            </div>
            </div>
            <%if(user.admin == 1){%>
                <div class='div crear'>
                    <a href="/product/panel" id="button"> Panel de control</a>
                </div>
                <div class='div crear'>
                    <a href="/product/create" id="button"> Crear nuevo producto</a>
                </div>
                <%}%>
            <%if(user.admin == 0){%>
                <div class="tusElementos">
                    <div class="div favs">
                    <a href="/>"><div class="item1">
                        <img class="cartImg" src="/imagenes/favs.png">
                    </div></a>
                    <div class="item2">
                         <h4 class="texto">Tus favoritos</h4>
                    </div>
                        <!-- tags de js para vista de favoritos -->
                    </div>
                    
                    <div class='div carrillo'>
                        <a href="/cart/<%=user.id%>"> <div class="item1">
                            <img class="cartImg" src="/imagenes/carrito.png">
                        </div>
                        </a>
                        <div class="item2">
                            <h4 class="texto">Tu carrito de compras</h4>
                        </div>
                    </div>
                </div>
                    <%}%>
                <div class='div crear'>
                    <a href="/users/profile/edit" id="button">Editar Perfil</a>
                </div>
            
            
            <div class="cerrar">
            <form action="/users/logout" method="GET">           
                <button id="ingresar" type="submit">Cerrar sesión</button>
            </form> 
            </div>

            </div>
        </main>
       

    
        <%- include('../partials/footer') %>

        <script src="https://kit.fontawesome.com/17464b966e.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        <script src="/javascript/profile.js"></script>

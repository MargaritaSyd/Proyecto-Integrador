    <body>
        <div class="fixed-top">
            <header class="newHeader">
              <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                  <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
                  </a>
                  <span>
                      <a href="/"> <img class="logo" src="/imagenes/logo.png" alt="logo"></a> 
                  </span>
                  <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/" class="nav-link px-2 text-white botonHeader">Inicio</a></li>
                    <li><a href="/users/login" class="nav-link px-2 text-white botonHeader">Perfil</a></li>
                    <li><a href="/product" class="nav-link px-2 text-white botonHeader">Productos</a></li>
                    <li><a href="/faqs" class="nav-link px-2 text-white botonHeader">FAQs</a></li>
                    <li><a href="/nosotros" class="nav-link px-2 text-white botonHeader">Nosotros</a></li>
                    <li><a href="/cart" <i class="fas fa-shopping-cart botonHeader"></i></a></li>
                  </ul>
                  <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                    <input type="search" class="form-control form-control-dark" placeholder="Buscar producto.." aria-label="Search">
                  </form>
                  <div class="text-end">
                    <!-- <a href="/users/login" <button type="button" class="btn btn-outline-light me-2" >Ingresá!</button> </a> -->
                    <a href="/users/register" <button type="button" class="btn btn-warning" >Creá tu cuenta</button> </a>
                  </div>
                </div>
              </div>
            </header>
          </div>
      
          
    
    <main id="login-main">
        <div class="space"></div>
        <div class="space"></div>
        <div class="space"></div>

        <% if(locals.errorMessage != undefined){%>
            <div class="cajaMensajeError">
                <div class="mensajeError"> <p style= "color:red"> Credenciales Inválidas </p></div>
            </div>
        <%}%>
        

        
        
        <main id="login-main">
            <div id="contenedor-general">
                <div id="div-icono"> 
                    <i id="icono" class="fas fa-user"></i>    
                </div>
                <label id="bienvenida" class="labels-formulario">Iniciar sesión</label>
                <form class="loginform" action="/users/login" method="POST">           
                    <div class="div">
                        <label id="contraseña" class="labels-formulario">Usuario</label>
                        <input type="text" name="email" class="input inputMailLog" placeholder="bemba.contenta@example.com"> 
                    </div>
                    <div class="div">
                        <label id="contraseña" class="labels-formulario">Contraseña</label>
                        <input type="password" name="password" class="input inputPasswordCheck" placeholder="*********">
                
                    <label class="label-checkbox">
                      <label id="label-usuario" class="labels-formulario">
                          <input type="checkbox" name="remember_user"> Recordar mi usuario
                      </label>
                  </label>
                    <button type="submit" class="btn btn-outline-success" id="ingresar">Ingresar</button>
                   <div>
                    <button id="restablecer" type="submit">¿Reestablecer contraseña?</button>
                    <a href="/users/register" id="ancorRegistro"> ¿No estás registrado? </a> 
                    
                  </div>
                </form> 
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div>
                <div class="space"></div> 
        
            </div>
            
         
        </main>
        <div class="fixed-bottom">
        <%- include('../partials/footer.ejs') %>
        </div>
        
        <script src="https://kit.fontawesome.com/17464b966e.js" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/17464b966e.js" crossorigin="anonymous"></script>
         
